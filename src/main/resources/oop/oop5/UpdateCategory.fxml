<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" prefHeight="550" prefWidth="950" style="-fx-background-color: darkblue;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="oop.oop5.UpdateCategory">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Update Category" textFill="WHITE" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Label text="Category ID" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="1" />
    <TextField fx:id="idField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

    <Label text="New Category Name" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="2" />
    <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="2" />

    <Label text="New Description" textFill="WHITE" GridPane.columnIndex="0" GridPane.rowIndex="3" />
    <TextField fx:id="descriptionField" GridPane.columnIndex="1" GridPane.rowIndex="3" />

    <Button fx:id="updateButton" onAction="#update" text="Update" GridPane.columnSpan="2" GridPane.rowIndex="4" />
    <Button fx:id="backButton" onAction="#back" text="Back" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
