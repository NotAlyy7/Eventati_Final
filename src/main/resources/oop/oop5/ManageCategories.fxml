<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" prefHeight="550" prefWidth="950" style="-fx-background-color: darkblue;" vgap="10" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/23.0.1" fx:controller="oop.oop5.ManageCategories">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Manage Categories" textFill="WHITE" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <Button fx:id="createButton" onAction="#createCategory" text="Create Category" GridPane.columnSpan="2" GridPane.rowIndex="1" />
    <Button fx:id="updateButton" onAction="#updateCategory" text="Update Category" GridPane.columnSpan="2" GridPane.rowIndex="3" />
    <Button fx:id="deleteButton" onAction="#deleteCategory" text="Delete Category" GridPane.columnSpan="2" GridPane.rowIndex="4" />
    <Button fx:id="backButton" onAction="#back" text="Back to Dashboard" GridPane.columnSpan="2" GridPane.rowIndex="5" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
