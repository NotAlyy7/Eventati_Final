        <ChoiceBox fx:id="roomChoiceBox" layoutX="311.0" layoutY="433.0" prefWidth="150.0" />
        <Button layoutX="527.0" layoutY="472.0" mnemonicParsing="false" onAction="#HandleUpdateEvent" style="-fx-background-color: #0056b3;" text="Confirm" textFill="WHITE">
