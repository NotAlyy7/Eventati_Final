<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane alignment="CENTER" hgap="10" prefHeight="550" prefWidth="950" style="-fx-background-color: darkblue;" vgap="10" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="oop.oop5.ViewCategories">
    <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="View Categories" textFill="WHITE" GridPane.columnSpan="2" GridPane.rowIndex="0" />

    <TableView fx:id="categoryTable" GridPane.columnSpan="2" GridPane.rowIndex="1">
        <columns>
            <TableColumn fx:id="categoryNameColumn" text="ID" />
            <TableColumn fx:id="descriptionColumn" text="Name" />
        </columns>
    </TableView>

    <Button fx:id="backButton" onAction="#back" text="Back to Dashboard" GridPane.columnSpan="2" GridPane.rowIndex="2" />
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
